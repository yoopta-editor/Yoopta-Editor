{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": [
    "packages/plugins/*",
    "packages/marks",
    "packages/core/*",
    "packages/themes/*",
    "packages/development"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "6.0.0-beta.8",
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "access": "public",
      "ignoreChanges": ["**/__tests__/**", "**/*.test.ts", "**/*.spec.ts"]
    }
  }
}
