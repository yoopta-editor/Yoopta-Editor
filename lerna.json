{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": [
    "packages/plugins/*",
    "packages/tools/*",
    "packages/marks",
    "packages/core/*",
    "packages/themes/*",
    "packages/development"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "4.9.9",
  "command": {
    "version": {
      "conventionalCommits": true
    },
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "access": "public",
      "ignoreChanges": [
        "**/__tests__/**",
        "**/*.test.ts",
        "**/*.spec.ts"
      ]
    }
  }
}