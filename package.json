{
  "name": "yoopta",
  "workspaces": [
    "packages/plugins/*",
    "packages/marks",
    "packages/core/*",
    "packages/themes/*",
    "web/*"
  ],
  "private": true,
  "scripts": {
    "dev": "turbo run dev start --filter=next-app-example",
    "dev:all": "turbo run start dev --parallel",
    "build": "yarn clean && turbo run build --filter=!next-app-example",
    "clean": "find ./packages -type d -name dist -exec rm -rf {} +",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:plugins": "vitest packages/plugins/*/src/**/*.test.ts",
    "test:core": "vitest packages/core/*/src/**/*.test.ts",
    "test:marks": "vitest packages/marks/src/**/*.test.ts",
    "test:integration": "playwright test",
    "coverage": "vitest run --coverage",
    "lint": "eslint packages/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint packages/ --ext .js,.jsx,.ts,.tsx --fix",
    "prettier": "prettier --write packages/",
    "format": "yarn prettier",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "yarn clean && turbo run build --filter=!next-app-example && changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@faker-js/faker": "^10.3.0",
    "@floating-ui/dom": "^1.6.11",
    "@playwright/test": "^1.30.0",
    "@rollup/plugin-alias": "^4.0.2",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.1",
    "@rollup/plugin-terser": "^0.3.0",
    "@svgr/rollup": "^6.5.1",
    "@svgr/webpack": "^7.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/body-scroll-lock": "^3.1.0",
    "@types/is-url": "^1.2.30",
    "@types/node": "17.0.8",
    "@types/prismjs": "^1.26.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "@vitejs/plugin-react": "^4.5.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.17",
    "babel-plugin-prismjs": "^2.1.0",
    "check-peer-dependencies": "^4.3.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "12.0.8",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^9.1.7",
    "jsdom": "^21.1.0",
    "lint-staged": "^16.2.1",
    "mini-css-extract-plugin": "^2.6.1",
    "postcss": "^8.4.35",
    "postcss-import": "^16.0.0",
    "postcss-nesting": "^12.0.2",
    "postcss-scope": "^1.7.3",
    "prettier": "2.8.8",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "resend": "^4.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.2.3",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "rollup-plugin-json": "3.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "rollup-plugin-uglify": "6.0.0",
    "sass": "^1.55.0",
    "slate": "^0.120.0",
    "slate-dom": "^0.119.0",
    "slate-react": "^0.120.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.1",
    "turbo": "^2.5.4",
    "typescript": "^4.8.4",
    "vite-plugin-svgr": "^2.4.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "resolutions": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "packageManager": "yarn@4.12.0"
}
